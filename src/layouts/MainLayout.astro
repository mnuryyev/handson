---
import '../styles/global.css';
import Footer from '../components/Footer.astro';
import LangSwitcher from '../components/LangSwitcher.astro';
const base = import.meta.env.BASE_URL;

const { title } = Astro.props;
const { pathname } = Astro.url;

// Определяем текущий язык для меню (ru по умолчанию)
const lang = pathname.includes('/en/') ? 'en' : 'ru';

// Переводы для навигации
const nav = {
  ru: {
    articles: 'Сети и администрирование',
    labs: 'Безопасность',
    projects: 'Проекты',
    writeups: 'Writeups',
    tools: 'Tools',
  },
  en: {
    articles: 'Networks & Administration',
    labs: 'Security',
    projects: 'Projects',
    writeups: 'Writeups',
    tools: 'Tools',
  }
};

const t = nav[lang];
---

<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
  </head>
  <body>
   <nav class="navbar">
      <div class="container nav-wrapper">
        <div class="nav-logo">
          <a href={`${base}${lang}/`}>HANDS<span>.ON</span></a>
        </div>

        <ul class="nav-links">
          <li><a href={`${base}${lang}/articles/1`}>{t.articles}</a></li>
          <li><a href={`${base}${lang}/labs/1`}>{t.labs}</a></li>
          <li><a href={`${base}${lang}/writeups/1`}>{t.writeups}</a></li>
          <li><a href={`${base}${lang}/tools/1`}>{t.tools}</a></li>
          <li><a href={`${base}${lang}/projects`}>{t.projects}</a></li>
          
          <li class="nav-actions">
            <LangSwitcher />
          </li>
          <li>
            <a href="https://github.com/mnuryyev" class="btn-projects" target="_blank" rel="noopener noreferrer">Github</a>
          </li>
        </ul>
      </div>
    </nav>

    <main class="container main-content">
      <slot />
    </main>

    <Footer lang={lang} />
  </body>
</html>

<style is:global>
  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    margin: 0;
    background-color: #000;
    color: #fff;
    font-family: system-ui, -apple-system, sans-serif;
  }
  
  .main-content {
    flex: 1;
    width: 100%;
    padding-top: 40px;
    padding-bottom: 60px;
  }

  .navbar {
    border-bottom: 1px solid #1a1a1a;
    background: rgba(0, 0, 0, 0.8);
    backdrop-filter: blur(10px);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .nav-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 80px;
  }

  .nav-links {
    display: flex;
    align-items: center;
    list-style: none;
    gap: 25px;
    margin: 0;
    padding: 0;
  }

  .nav-links a {
    text-decoration: none;
    color: #888;
    font-weight: 500;
    transition: 0.3s;
    font-size: 0.95rem;
  }

  .nav-links a:hover {
    color: #fff;
  }

  .nav-logo a {
    font-size: 1.5rem;
    font-weight: bold;
    color: #fff;
    text-decoration: none;
  }

  .nav-logo span {
    color: var(--accent);
  }

  .nav-actions {
    padding: 0 10px;
    border-left: 1px solid #222;
    border-right: 1px solid #222;
  }

  .btn-projects {
    background: #fff;
    color: #000 !important;
    padding: 8px 16px;
    border-radius: 8px;
    font-size: 0.9rem;
  }

  .btn-projects:hover {
    background: var(--accent) !important;
    color: #fff !important;
  }

  /* --- АДАПТИВНАЯ ВЕРСТКА ДЛЯ МОБИЛЬНЫХ --- */

  @media (max-width: 768px) {
    .nav-wrapper {
      flex-direction: column; /* Элементы один под другим */
      height: auto;
      padding: 20px 0;
      gap: 15px;
    }

    .nav-links {
      flex-wrap: wrap; /* Разрешаем перенос ссылок на новую строку */
      justify-content: center;
      gap: 15px;
    }

    .nav-actions {
      border: none; /* Убираем линии по бокам на мобилках */
      padding: 0;
    }

    .main-content {
      padding-top: 20px;
    }

    /* Делаем все сетки (grid) на сайте в одну колонку */
    .grid {
      grid-template-columns: 1fr !important;
    }
  }

  @media (max-width: 480px) {
    .nav-links a {
      font-size: 0.85rem; /* Еще чуть меньше шрифт для совсем маленьких экранов */
    }
    .nav-logo a {
      font-size: 1.2rem;
    }
  }
</style>
