import MainLayout from '../../../layouts/MainLayout.astro';
import LabCard from '../../../components/LabCard.astro'; 
import fs from 'node:fs';
import path from 'node:path';
import matter from 'gray-matter';

export async function getStaticPaths({ paginate }) {
  // –ß–∏—Ç–∞–µ–º –∏–∑ –ø–æ–¥–ø–∞–ø–∫–∏ ru
  const articlesDir = './src/content/articles/ru';
  
  const files = fs.existsSync(articlesDir) 
    ? fs.readdirSync(articlesDir).filter(f => f.endsWith('.md'))
    : [];

  const allArticles = files.map(file => {
    const fileContent = fs.readFileSync(path.join(articlesDir, file), 'utf-8');
    const { data } = matter(fileContent);
    return {
      slug: file.replace('.md', ''),
      ...data
    };
  }).sort((a, b) => new Date(b.date || 0).getTime() - new Date(a.date || 0).getTime());

  return paginate(allArticles, { pageSize: 12 });
}

const { page } = Astro.props;
const lang = "ru"; 
