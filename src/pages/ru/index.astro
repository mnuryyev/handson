import matter from 'gray-matter';

const lang = "ru";

// –§—É–Ω–∫—Ü–∏—è –¥–ª—è –ø–æ–ª—É—á–µ–Ω–∏—è —Å–≤–µ–∂–∏—Ö –ª–∞–± –∏ —Å—Ç–∞—Ç–µ–π —Å —Å–æ—Ä—Ç–∏—Ä–æ–≤–∫–æ–π –ø–æ ORDER
function getLatestFiles(dirPath) {
  const fullPath = path.resolve(dirPath);
  if (!fs.existsSync(fullPath)) return [];
    
  const files = fs.readdirSync(fullPath).filter(f => f.endsWith('.md'));
    
  return files.map(file => {
    const fileContent = fs.readFileSync(path.join(fullPath, file), 'utf-8');
    const { data } = matter(fileContent);
    return {
      slug: file.replace('.md', ''),
      data: data
    };
  })
  .sort((a, b) => {
    // 1. –ü—Ä–∏–Ω—É–¥–∏—Ç–µ–ª—å–Ω–æ –ø—Ä–µ–≤—Ä–∞—â–∞–µ–º order –≤ —á–∏—Å–ª–∞ –¥–ª—è —Å—Ä–∞–≤–Ω–µ–Ω–∏—è
    const orderA = a.data.order !== undefined ? parseInt(a.data.order) : 999;
    const orderB = b.data.order !== undefined ? parseInt(b.data.order) : 999;

    // 2. –ï—Å–ª–∏ –ø–æ—Ä—è–¥–∫–æ–≤—ã–µ –Ω–æ–º–µ—Ä–∞ —Ä–∞–∑–Ω—ã–µ, —Å–æ—Ä—Ç–∏—Ä—É–µ–º –ø–æ –Ω–∏–º (1, 2, 3...)
    if (orderA !== orderB) {
      return orderA - orderB;
    }

    // 3. –ï—Å–ª–∏ order –æ–¥–∏–Ω–∞–∫–æ–≤—ã–π –∏–ª–∏ –æ—Ç—Å—É—Ç—Å—Ç–≤—É–µ—Ç, —Å–æ—Ä—Ç–∏—Ä—É–µ–º –ø–æ –¥–∞—Ç–µ (–Ω–æ–≤—ã–µ –≤—ã—à–µ)
    const dateA = new Date(a.data.date || 0).getTime();
    const dateB = new Date(b.data.date || 0).getTime();
    return dateB - dateA;
  })
  .slice(0, 3);
}

const latestLabs = getLatestFiles(`./src/content/labs/${lang}`);
const latestArticles = getLatestFiles(`./src/content/articles/${lang}`);
const latestWriteups = getLatestFiles(`./src/content/writeups/${lang}`);
const latestTools = getLatestFiles(`./src/content/tools/${lang}`);

// --- –õ–û–ì–ò–ö–ê –ü–†–û–ï–ö–¢–û–í –° –°–û–†–¢–ò–†–û–í–ö–û–ô –ü–ê–ü–û–ö (–æ–ø—Ü–∏–æ–Ω–∞–ª—å–Ω–æ) ---
const projectsDir = path.resolve(`./src/content/projects/${lang}`);
let latestProjects = [];

if (fs.existsSync(projectsDir)) {
  const projectFolders = fs.readdirSync(projectsDir).filter(f => 
    fs.statSync(path.join(projectsDir, f)).isDirectory()
  );

  latestProjects = projectFolders.map(folder => {
    const folderPath = path.join(projectsDir, folder);
    const files = fs.readdirSync(folderPath).filter(f => f.endsWith('.md')).sort();
    
    if (files.length === 0) return null;

    // –ß–∏—Ç–∞–µ–º –ø–µ—Ä–≤—ã–π —Ñ–∞–π–ª –ø—Ä–æ–µ–∫—Ç–∞, —á—Ç–æ–±—ã –¥–æ—Å—Ç–∞—Ç—å –µ–≥–æ –æ–ø–∏—Å–∞–Ω–∏–µ –∏ –µ–≥–æ —Å–æ–±—Å—Ç–≤–µ–Ω–Ω—ã–π order
    const firstFileContent = fs.readFileSync(path.join(folderPath, files[0]), 'utf-8');
    const { data } = matter(firstFileContent);

    return { 
       folder, 
       title: folder.replace(/-/g, ' '),
       description: data.description || "–†–∞–∑–±–æ—Ä –ø—Ä–æ–µ–∫—Ç–∞",
       count: files.length,
       firstCard: files[0].replace('.md', ''),
       order: data.order !== undefined ? parseInt(data.order) : 999 // –ë–µ—Ä–µ–º order –∏–∑ –ø–µ—Ä–≤–æ–π –∫–∞—Ä—Ç–æ—á–∫–∏ –ø—Ä–æ–µ–∫—Ç–∞
    };
  })
  .filter(project => project !== null)
  .sort((a, b) => a.order - b.order) // –°–æ—Ä—Ç–∏—Ä—É–µ–º –∏ –ø–∞–ø–∫–∏ –ø—Ä–æ–µ–∫—Ç–æ–≤ —Ç–æ–∂–µ
  .slice(0, 3);
}

function pluralize(count, one, two, five) {
  let n = Math.abs(count);
  n %= 100;
  if (n >= 5 && n <= 20) return five;
  n %= 10;
  if (n === 1) return one;
  if (n >= 2 && n <= 4) return two;
  return five;
}
