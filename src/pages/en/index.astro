---
import MainLayout from '../../layouts/MainLayout.astro';
import LabCard from '../../components/LabCard.astro';
import fs from 'node:fs';
import path from 'node:path';
import matter from 'gray-matter';

// Get base for GitHub Pages
const base = import.meta.env.BASE_URL;
const lang = "en";

function getLatestFiles(dirPath) {
  const fullPath = path.resolve(dirPath);
  if (!fs.existsSync(fullPath)) return [];
  
  const files = fs.readdirSync(fullPath).filter(f => f.endsWith('.md'));
  
  return files.map(file => {
    const fileContent = fs.readFileSync(path.join(fullPath, file), 'utf-8');
    const { data } = matter(fileContent);
    return {
      slug: file.replace('.md', ''),
      data: data
    };
  })
  .sort((a, b) => {
    // Sort by order first, then by date
    const orderA = a.data.order !== undefined ? parseInt(a.data.order) : 999;
    const orderB = b.data.order !== undefined ? parseInt(b.data.order) : 999;
    if (orderA !== orderB) return orderA - orderB;
    const dateA = new Date(a.data.date || 0).getTime();
    const dateB = new Date(b.data.date || 0).getTime();
    return dateB - dateA;
  })
  .slice(0, 3);
}

const latestLabs = getLatestFiles(`./src/content/labs/${lang}`);
const latestArticles = getLatestFiles(`./src/content/articles/${lang}`);
const latestWriteups = getLatestFiles(`./src/content/writeups/${lang}`);
const latestTools = getLatestFiles(`./src/content/tools/${lang}`);

const projectsDir = path.resolve(`./src/content/projects/${lang}`);
let latestProjects = [];

if (fs.existsSync(projectsDir)) {
  const projectFolders = fs.readdirSync(projectsDir).filter(f => 
    fs.statSync(path.join(projectsDir, f)).isDirectory()
  );

  latestProjects = projectFolders.map(folder => {
    const folderPath = path.join(projectsDir, folder);
    const files = fs.readdirSync(folderPath).filter(f => f.endsWith('.md')).sort();
    
    if (files.length === 0) return null;

    const firstFileContent = fs.readFileSync(path.join(folderPath, files[0]), 'utf-8');
    const { data } = matter(firstFileContent);

    return { 
      folder, 
      title: folder.replace(/-/g, ' '),
      description: data.description || "Project breakdown",
      count: files.length,
      firstCard: files[0].replace('.md', ''),
      order: data.order !== undefined ? parseInt(data.order) : 999
    };
  })
  .filter(p => p !== null)
  .sort((a, b) => a.order - b.order)
  .slice(0, 3);
}

function pluralizeEn(count, singular, plural) {
  return count === 1 ? singular : plural;
}
---

<MainLayout title="Home | HANDS.ON">

  <section class="hero">
    <div class="container">
      <h1><span>Projects</span>, <span>Writeups</span>, and Security <span>Analyses</span></h1>
      <p>Platform walkthroughs, security tool documentation, and hands-on labs for networking and systems administration.</p>
    </div>
  </section>

  <section class="home-section container">
    <div class="section-header">
      <h2>üåê Networks & Administration</h2>
      <a href={`${base}${lang}/articles/1`}>All ‚Üí</a>
    </div>
    <div class="grid">
      {latestArticles.map(article => (
        <LabCard 
          title={article.data.title} 
          desc={article.data.description} 
          image={article.data.image} 
          date={article.data.date}  
          url={`${lang}/articles/${article.slug}`} 
        />
      ))}
    </div>
  </section>

  <section class="home-section container">
    <div class="section-header">
      <h2>üîê Security & Systems</h2>
      <a href={`${base}${lang}/labs/1`}>All ‚Üí</a>
    </div>
    <div class="grid">
      {latestLabs.map(lab => (
        <LabCard 
          title={lab.data.title} 
          desc={lab.data.description} 
          image={lab.data.image} 
          date={lab.data.date}  
          url={`${lang}/labs/${lab.slug}`} 
        />
      ))}
    </div>
  </section>

  <section class="home-section container">
    <div class="section-header">
      <h2>üéØ Writeups</h2>
      <a href={`${base}${lang}/writeups/1`}>All ‚Üí</a>
    </div>
    <div class="grid">
      {latestWriteups.map(post => (
        <LabCard 
          title={post.data.title} 
          desc={post.data.description} 
          image={post.data.image} 
          date={post.data.date} 
          url={`${lang}/writeups/${post.slug}`} 
        />
      ))}
    </div>
  </section>

  <section class="home-section container">
    <div class="section-header">
      <h2>üõ†Ô∏è Tools & Scripts</h2>
      <a href={`${base}${lang}/tools/1`}>All ‚Üí</a>
    </div>
    <div class="grid">
      {latestTools.map(tool => (
        <LabCard 
          title={tool.data.title} 
          desc={tool.data.description} 
          image={tool.data.image} 
          date={tool.data.date} 
          url={`${lang}/tools/${tool.slug}`} 
        />
      ))}
    </div>
  </section>

  <section class="home-section container">
    <div class="section-header">
      <h2>üìÅ Projects</h2>
      <a href={`${base}${lang}/projects`}>All projects ‚Üí</a>
    </div>
    <div class="grid">
      {latestProjects.map(proj => (
        <a href={`${base}${lang}/projects/${proj.folder}/${proj.firstCard}`} class="folder-card">
          <div class="folder-header">
             <div class="folder-icon">üìÅ</div>
             <span class="step-badge">
               {proj.count} {pluralizeEn(proj.count, 'part', 'parts')}
             </span>
          </div>
          <div class="folder-body">
            <h3>{proj.title}</h3>
            <p>{proj.description}</p>
          </div>
        </a>
      ))}
    </div>
  </section>

</MainLayout>

<style>
  .hero { padding: 80px 0; text-align: center; }
  .hero h1 { font-size: 3.5rem; margin-bottom: 1rem; letter-spacing: -2px; color: #fff; line-height: 1.1; }
  .hero h1 span { color: var(--accent); }
  .hero p { color: #888; font-size: 1.25rem; max-width: 600px; margin: 0 auto; }
  
  .home-section { padding: 40px 20px; }
  .section-header { display: flex; justify-content: space-between; align-items: baseline; margin-bottom: 24px; border-bottom: 1px solid #222; padding-bottom: 10px; }
  .section-header h2 { font-size: 1.5rem; margin: 0; color: #fff; }
  .section-header a { color: var(--accent); font-weight: 500; font-size: 0.9rem; text-decoration: none; }
  
  .grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(320px, 1fr)); gap: 24px; }
  
  .folder-card { background: #1a1a1a; border: 1px solid #333; border-radius: 16px; padding: 24px; text-decoration: none; transition: all 0.3s ease; display: flex; flex-direction: column; gap: 15px; }
  .folder-card:hover { border-color: var(--accent); transform: translateY(-5px); background: #222; }
  .folder-header { display: flex; justify-content: space-between; align-items: center; }
  .folder-icon { font-size: 2.5rem; }
  .step-badge { background: rgba(var(--accent-rgb), 0.1); color: var(--accent); padding: 4px 10px; border-radius: 8px; font-size: 0.8rem; font-weight: bold; border: 1px solid var(--accent); }
  .folder-body h3 { margin: 0; color: #fff; text-transform: capitalize; font-size: 1.25rem; }
  .folder-body p { margin: 8px 0 0; color: #888; font-size: 0.95rem; line-height: 1.5; }

  /* --- RESPONSIVE STYLES --- */
  @media (max-width: 768px) {
    .hero { padding: 40px 0; }
    .hero h1 { font-size: 2.2rem; letter-spacing: -1px; }
    .hero p { font-size: 1.1rem; }
    
    .section-header { flex-direction: column; align-items: flex-start; gap: 10px; }
    .section-header a { font-size: 1rem; padding-top: 5px; }
    
    .grid { grid-template-columns: 1fr; }
    
    .folder-card { padding: 20px; }
  }
</style>
