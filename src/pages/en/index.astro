---
import MainLayout from '../../layouts/MainLayout.astro';
import LabCard from '../../components/LabCard.astro';
import fs from 'node:fs';
import path from 'node:path';
import matter from 'gray-matter';

const lang = "en";

// --- LOGIC FOR READING LABS AND ARTICLES ---
function getLatestFiles(dirPath) {
  const fullPath = path.resolve(dirPath);
  if (!fs.existsSync(fullPath)) return [];
  
  const files = fs.readdirSync(fullPath).filter(f => f.endsWith('.md'));
  
  return files.map(file => {
    const fileContent = fs.readFileSync(path.join(fullPath, file), 'utf-8');
    const { data } = matter(fileContent);
    return {
      slug: file.replace('.md', ''),
      data: data
    };
  })
  .sort((a, b) => new Date(b.data.date || 0).getTime() - new Date(a.data.date || 0).getTime())
  .slice(0, 3);
}

const latestLabs = getLatestFiles(`./src/content/labs/${lang}`);
const latestArticles = getLatestFiles(`./src/content/articles/${lang}`);
const latestWriteups = getLatestFiles(`./src/content/writeups/${lang}`);
const latestTools = getLatestFiles(`./src/content/tools/${lang}`);

// --- PROJECTS LOGIC WITH ERROR PROTECTION ---
const projectsDir = path.resolve(`./src/content/projects/${lang}`);
let latestProjects = [];

if (fs.existsSync(projectsDir)) {
  const projectFolders = fs.readdirSync(projectsDir).filter(f => 
    fs.statSync(path.join(projectsDir, f)).isDirectory()
  );

  latestProjects = projectFolders.map(folder => {
    const folderPath = path.join(projectsDir, folder);
    const files = fs.readdirSync(folderPath).filter(f => f.endsWith('.md')).sort();
    
    // FIX: Protection against empty folders to prevent "path must be string" error
    if (files.length === 0) return null;

    const firstFileContent = fs.readFileSync(path.join(folderPath, files[0]), 'utf-8');
    const { data } = matter(firstFileContent);

    return { 
      folder, 
      title: folder.replace(/-/g, ' '),
      description: data.description || "Project breakdown",
      count: files.length,
      firstCard: files[0].replace('.md', '')
    };
  })
  .filter(p => p !== null) // Filter out nulls from empty folders
  .slice(0, 3);
}

// English pluralization is simpler: "1 part" vs "2 parts"
function pluralizeEn(count, singular, plural) {
  return count === 1 ? singular : plural;
}
