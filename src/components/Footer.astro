---
// Определяем язык прямо из URL, чтобы не зависеть от пропсов
const { pathname } = Astro.url;
const lang = pathname.includes('/en/') ? 'en' : 'ru';

const base = import.meta.env.BASE_URL;
const currentYear = new Date().getFullYear();

// Объекты перевода
const translations = {
  ru: {
    articles: "Статьи",
    labs: "Безопасность",
    writeups: "Writeups",
    tools: "Tools",
    projects: "Проекты",
    rights: "Все права защищены.",
  },
  en: {
    articles: "Articles",
    labs: "Labs",
    writeups: "Writeups",
    tools: "Tools",
    projects: "Projects",
    rights: "All rights reserved.",
  }
};

const t = translations[lang];
---

<footer class="footer">
  <div class="container footer-content">
    <div class="footer-left">
      <div class="footer-logo">
        <a href={`${base}${lang}/`}>HANDS<span>.ON</span></a>
      </div>      
    </div>

    <div class="footer-right">
      <div class="footer-nav">
        <a href={`${base}${lang}/articles/1`}>{t.articles}</a>
        <a href={`${base}${lang}/labs/1`}>{t.labs}</a>
        <a href={`${base}${lang}/writeups/1`}>{t.writeups}</a>
        <a href={`${base}${lang}/tools/1`}>{t.tools}</a>
        <a href={`${base}${lang}/projects`}>{t.projects}</a>
      </div>
      
      <div class="footer-social">
        <a href="https://github.com/mnuryyev" target="_blank" class="social-btn">
          <span>GitHub</span>
        </a>
      </div>
    </div>
  </div>

  <div class="footer-bottom">
    <div class="container bottom-wrapper">
      <p>&copy; {currentYear} HANDS.ON. {t.rights}</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    width: 100%;
    background: #0a0a0a;
    border-top: 1px solid #1a1a1a;
    padding: 60px 0 20px 0;
    margin-top: 80px;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    box-sizing: border-box;
  }

  .footer-left {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .footer-logo a {
    font-size: 1.5rem;
    font-weight: 800;
    text-decoration: none;
    color: #fff;
    letter-spacing: -1px;
  }

  .footer-logo span { color: var(--accent); }

  .footer-right {
    display: flex;
    align-items: center;
    gap: 40px;
  }

  .footer-nav {
    display: flex;
    gap: 24px;
  }

  .footer-nav a {
    color: #888;
    text-decoration: none;
    font-size: 0.95rem;
    transition: 0.2s;
  }

  .footer-nav a:hover { color: #fff; }

  .social-btn {
    background: #111;
    border: 1px solid #222;
    padding: 8px 18px;
    border-radius: 8px;
    color: #fff;
    text-decoration: none;
    font-size: 0.9rem;
    transition: 0.2s;
    display: inline-block;
  }

  .social-btn:hover {
    border-color: var(--accent);
    background: #161616;
    color: var(--accent);
  }

  .footer-bottom {
    margin-top: 40px;
    padding-top: 20px;
    border-top: 1px solid #111;
    color: #555;
    font-size: 0.85rem;
    text-align: center;
  }

  .bottom-wrapper {
    display: flex;
    justify-content: center;
  }

  /* --- МОБИЛЬНАЯ АДАПТАЦИЯ --- */
  @media (max-width: 768px) {
    .footer {
      padding: 40px 0 20px 0;
    }
    .footer-content {
      flex-direction: column;
      gap: 30px;
      text-align: center;
    }
    .footer-right {
      flex-direction: column;
      gap: 25px;
    }
    .footer-nav {
      flex-wrap: wrap;
      justify-content: center;
      gap: 15px 20px;
    }
    .footer-nav a {
      font-size: 0.9rem;
    }
  }
</style>
