---
const { pathname } = Astro.url;
const lang = pathname.includes('/en/') ? 'en' : 'ru';
const base = import.meta.env.BASE_URL;
const currentYear = new Date().getFullYear();

const translations = {
  ru: {
    articles: "Статьи",
    labs: "Безопасность",
    writeups: "Writeups",
    tools: "Tools",
    projects: "Проекты",
    rights: "Все права защищены.",
  },
  en: {
    articles: "Articles",
    labs: "Labs",
    writeups: "Writeups",
    tools: "Tools",
    projects: "Projects",
    rights: "All rights reserved.",
  }
};

const t = translations[lang];
---

<footer class="footer">
  <div class="container footer-content">
    <div class="footer-left">
      <div class="footer-logo">
        <a href={`${base}${lang}/`}>HANDS<span>.ON</span></a>
      </div>
      <p class="copyright-text">&copy; {currentYear} HANDS.ON. {t.rights}</p>
    </div>

    <div class="footer-right">
      <div class="footer-nav">
        <a href={`${base}${lang}/articles/1`}>{t.articles}</a>
        <a href={`${base}${lang}/labs/1`}>{t.labs}</a>
        <a href={`${base}${lang}/writeups/1`}>{t.writeups}</a>
        <a href={`${base}${lang}/tools/1`}>{t.tools}</a>
        <a href={`${base}${lang}/projects`}>{t.projects}</a>
      </div>
      
      <div class="footer-social">
        <a href="https://github.com/mnuryyev" target="_blank" class="social-btn">
          <span>GitHub</span>
        </a>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    width: 100%;
    background: #0a0a0a;
    border-top: 1px solid #1a1a1a;
    padding: 40px 0;
    margin-top: 60px;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }

  .footer-left {
    display: flex;
    flex-direction: column;
    gap: 12px; /* Увеличили расстояние, чтобы текст не лип к лого */
  }

  .footer-logo a {
    font-size: 1.2rem;
    font-weight: 800;
    text-decoration: none;
    color: #fff;
  }

  .footer-logo span { color: var(--accent); }

  .copyright-text {
    margin: 0;
    color: #555;
    font-size: 0.75rem;
    white-space: nowrap; /* Чтобы на больших экранах не переносилось */
  }

  .footer-right {
    display: flex;
    align-items: center;
    gap: 40px;
  }

  .footer-nav {
    display: flex;
    gap: 24px;
  }

  .footer-nav a {
    color: #888;
    text-decoration: none;
    font-size: 0.9rem;
    transition: 0.2s;
  }

  .footer-nav a:hover { color: #fff; }

  .social-btn {
    background: #111;
    border: 1px solid #222;
    padding: 6px 14px;
    border-radius: 6px;
    color: #fff;
    text-decoration: none;
    font-size: 0.85rem;
    transition: 0.2s;
  }

  .social-btn:hover {
    border-color: var(--accent);
    background: #161616;
  }

  /* Адаптация для мобильных */
  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      align-items: center;
      gap: 30px;
      text-align: center;
    }
    .footer-right {
      flex-direction: column;
      gap: 20px;
    }
    .footer-nav {
      justify-content: center;
      flex-wrap: wrap;
      gap: 15px;
    }
    .copyright-text {
      white-space: normal; /* На мобилках пусть переносится, если экран очень узкий */
    }
  }
</style>
