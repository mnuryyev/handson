---
// 1. Получаем данные из пропсов
const { title, desc, url, image, date } = Astro.props;

// 2. Определяем текущий язык из URL
const { pathname } = Astro.url;
const isEn = pathname.startsWith('/en');
const lang = isEn ? 'en' : 'ru';

// 3. Формируем правильную ссылку. 
// Если url не содержит префикс языка, добавляем его.
const finalUrl = (url.startsWith('/ru/') || url.startsWith('/en/')) 
  ? url 
  : `/${lang}${url.startsWith('/') ? url : '/' + url}`;
---

<a href={finalUrl} class="yt-video-card">
  <div class="thumbnail">
    {image ? (
      <img src={image} alt={title} class="card-img" />
    ) : (
      <div class="no-img">LAB PREVIEW</div>
    )}
  </div>

  <div class="meta">
    <h3 class="title">{title}</h3>
    <p class="description">{desc}</p>
    <span class="date">{date || "2026"}</span>
  </div>
</a>

<style>
  .yt-video-card {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    gap: 12px;
    padding: 8px;
    border-radius: 16px;
    border: 1px solid #424141;
    transition: all 0.2s ease-in-out;
    background: transparent;
  }

  /* Эффект при наведении */
  .yt-video-card:hover {
    background: #1a1a1a;
    border-color: #333;
    transform: translateY(-4px);
  }

  .thumbnail {
    width: 100%;
    aspect-ratio: 16 / 9;
    background: #1a1a1a;
    border-radius: 12px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    outline: 1px solid rgba(255, 255, 255, 0.05);
    outline-offset: -1px;
  }

  .card-img {
    width: 100%;
    height: 100%;
    object-fit: cover; 
    object-position: center; 
    transition: transform 0.3s ease;
  }

  .yt-video-card:hover .card-img {
    transform: scale(1.05);
  }

  .no-img {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #222;
    color: #444;
    font-weight: bold;
  }

  .meta {
    display: flex;
    flex-direction: column;
    gap: 4px;
    padding: 0 4px 10px;
  }

  .title {
    margin: 0;
    font-size: 1.1rem;
    color: #fff;
    font-weight: 600;
    line-height: 1.4;
    display: block; 
    margin-bottom: 6px;
  }

  .description {
    margin: 0;
    font-size: 0.9rem;
    color: #aaa;
    line-height: 1.5;
    white-space: normal; 
    overflow: visible;
    display: block;
    margin-bottom: 8px;
  }

  .date {
    font-size: 0.8rem;
    color: #666;
  }
</style>